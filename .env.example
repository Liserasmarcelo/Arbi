# =====================================================
# PolyArbitrage Bot - Variables de Entorno
# =====================================================
# Copia este archivo a .env.local y completa los valores

# =====================================================
# TELEGRAM BOT
# =====================================================
# Token del bot obtenido de @BotFather
TELEGRAM_BOT_TOKEN=tu_token_de_botfather_aqui

# URL de la WebApp (para producción)
TELEGRAM_WEBAPP_URL=https://app.polyarbitrage.com

# =====================================================
# WALLETCONNECT
# =====================================================
# Project ID de WalletConnect (https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=tu_project_id_aqui

# =====================================================
# BLOCKCHAIN / RPC
# =====================================================
# Clave API de Alchemy (https://www.alchemy.com/)
ALCHEMY_API_KEY=tu_clave_alchemy

# URL RPC de Polygon (mainnet)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# URL RPC de Polygon Mumbai (testnet)
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# Red activa: 'mainnet' o 'testnet'
ACTIVE_NETWORK=testnet

# =====================================================
# POLYMARKET API
# =====================================================
# Endpoint API CLOB
POLYMARKET_CLOB_API=https://clob.polymarket.com
POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com

# WebSocket para orderbook
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# Clave API de Polymarket (opcional, para operaciones avanzadas)
POLYMARKET_API_KEY=

# =====================================================
# BASE DE DATOS
# =====================================================
# URL de conexión PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/polyarbitrage

# URL de conexión Redis
REDIS_URL=redis://localhost:6379

# =====================================================
# SEGURIDAD
# =====================================================
# Clave de encriptación (32 bytes en hex)
ENCRYPTION_KEY=tu_clave_encriptacion_32_bytes_hex

# Secreto para JWT
JWT_SECRET=tu_secreto_jwt_muy_largo_y_seguro

# =====================================================
# CONFIGURACIÓN DE ARBITRAJE
# =====================================================
# Umbral mínimo de arbitraje (porcentaje)
MIN_ARBITRAGE_THRESHOLD=0.005

# Tamaño máximo de posición en USD
MAX_POSITION_SIZE_USD=100

# Tolerancia de slippage
SLIPPAGE_TOLERANCE=0.01

# Precio máximo de gas en GWEI
MAX_GAS_PRICE_GWEI=50

# Límite de pérdida diaria en USD
DAILY_LOSS_LIMIT_USD=100

# Máximo de trades concurrentes
MAX_CONCURRENT_TRADES=3

# Cooldown después de pérdida (minutos)
LOSS_COOLDOWN_MINUTES=10

# =====================================================
# LOGGING Y MONITOREO
# =====================================================
# Nivel de log: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN (para monitoreo de errores)
SENTRY_DSN=

# =====================================================
# ENTORNO
# =====================================================
# Entorno actual: development, staging, production
NODE_ENV=development

# Puerto del servidor API
API_PORT=3001

# Puerto del servidor Web
WEB_PORT=3000
